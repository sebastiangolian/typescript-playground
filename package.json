{
  "name": "typescript-playground",
  "version": "1.0.0",
  "description": "Playground aplication for typescript",
  "main": "index.html",
  "scripts": {
    "serve": "live-server ./dist --port=8081 --wait=100",
    "build": "tsc",
    "watch": "tsc --w",
    "deploy": "gh-pages -d dist/",
    "start": "concurrently 'npm run serve' 'npm run watch'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebastiangolian/typescript-playground.git"
  },
  "keywords": [
    "typescript"
  ],
  "author": "sebastiangolian <sebastiangolian@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.4.0",
    "live-server": "^1.1.0",
    "gh-pages": "^4.0.0"
  }
}
