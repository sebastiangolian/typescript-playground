{
  "name": "typescript-playground",
  "version": "1.0.0",
  "description": "Playground aplication for typescript",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "serve": "live-server ./dist --port=8081 --wait=100",
    "build": "tsc",
    "watch": "tsc --w",
    "deploy": "gh-pages -d dist/",
    "node": "nodemon ./dist/js/app.js",
    "start": "npm run build && node ./dist/js/app.js",
    "start:watch": "npm run node & npm run watch",
    "start:browser": "concurrently 'npm run watch' 'npm run serve'",
    "start:node": "npm run start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebastiangolian/typescript-playground.git"
  },
  "keywords": [
    "typescript"
  ],
  "author": "sebastiangolian <sebastiangolian@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.5.0",
    "gh-pages": "^4.0.0",
    "live-server": "^1.1.0",
    "nodemon": "^2.0.20",
    "typescript": "^4.9.3"
  }
}
